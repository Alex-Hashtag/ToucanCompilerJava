package com.example;

macro createClass
{
    (identifier $name, type $T identifier $field = expression $expr) -> {
        class $name {
            public $T $field = $expr;

            public constructor new($T $field)
            {
                this.$field = $field;
            }
        }
    }
}

createClass!(Person, String name = nullBytes!(sizeof String));

void main()
{
    Person p = Person.new("Alice".toString());
    println!("Person's name is: " + p.name);
}