package org.alex_hashtag.macros;

/**
 * File containing some macros.
 *
 * We can declare multiple macros in the same file.
 */

macro repeat_hello
{
    (expression $count) -> {
        loop ($count)
            println!("Hello from macro!");
    };
}

// A macro to do safeDivide inlined, purely for demonstration
macro safeDivide
{
    (expression $a, expression $b) -> {
        switch ($b)
        {
            0 -> FAILURE(ArithmeticError.DivideByZeroError),
            _ -> SUCCESS($a / $b)
        }
    }
}
